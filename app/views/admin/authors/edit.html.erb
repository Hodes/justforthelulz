<%= form_for :author, {url: admin_edit_author_path, method: :patch, html: {class: 'pure-form pure-form-stacked'}} do |f| %>
  <fieldset>
    <legend>Edit Profile</legend>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'pure-input-1' %>
    <br />

    <%= f.label :email %>
    <%= f.text_field :email, class: 'pure-input-1' %>
    <br />

    <%= image_tag @author.avatar.url(:small) %>
    <br />

    <%= f.file_field :avatar %>
    <br /><br />

    <%= f.submit 'Save', class: 'pure-button pure-button-primary' %>
  </fieldset>
<% end %>
