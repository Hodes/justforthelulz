<header class="post-header">
  <%= image_tag article.author.avatar.url(:small), size: '48x48', class: 'post-avatar', alt: article.author.name + "'s avatar" %>
  <h2 class="post-title"><%= link_to(article.title, post_path(article.slug)) %></h2>
  <p class="post-meta">
    Por <%= article.author.name %> <%= article.updated_at.to_s(:post) %>
  </p>
</header>
