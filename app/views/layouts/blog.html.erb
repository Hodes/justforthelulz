<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= auto_discovery_link_tag :atom, "/feed" %>
  <%= auto_discovery_link_tag :rss, "/feed.rss" %>
  <title><%= page_title %></title>
  <%= stylesheet_link_tag    'blog', media: 'all' %>
  <%= javascript_include_tag 'blog' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="layout" class="pure-g">
  <div id="sidebar" class="pure-u-1">
    <div id="header">
      <h1 class="brand-title"><a href="/"><%= blog_title %></a></h1>
      <hr />
      <h2 class="brand-tagline"><%= blog_description %></h2>
      <ul class="nav-list">
        <li class="nav-item">
          <a href="http://github.com/hodes">
            <span class="fa-stack fa-lg">
              <i class="fa fa-square-o fa-stack-2x"></i>
              <i class="fa fa-github fa-stack-1x"></i>
            </span>
          </a>
        </li>
        <li class="nav-item">
          <a href="http://twitter.com/lulzaugusto">
            <span class="fa-stack fa-lg">
              <i class="fa fa-square-o fa-stack-2x"></i>
              <i class="fa fa-twitter fa-stack-1x"></i>
            </span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/feed">
            <span class="fa-stack fa-lg">
              <i class="fa fa-square-o fa-stack-2x"></i>
              <i class="fa fa-rss fa-stack-1x"></i>
            </span>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div id="content" class="pure-u-1 pure-u-md-16-24">
    <div>
      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
