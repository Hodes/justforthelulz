  <%= csrf_meta_tags %>
</head>
<body>
<% if logged_in? %>
  <div class="pure-menu pure-menu-open pure-menu-horizontal">
    <a href="#" class="pure-menu-heading">Just for the LULZ</a>

    <ul>
      <li><%= link_to 'New Post', new_article_path %></li>
      <li><%= link_to 'Edit Profile', edit_author_path %></li>
    </ul>
  </div>
<% end %>

<%= yield %>

</body>
</html>
