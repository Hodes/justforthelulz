<h1>New article</h1>

<%= form_for :article, {url: articles_path, html: {class: 'pure-form'}} do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit 'Post', class: 'pure-button pure-button-primary' %>
  </p>
<% end %>
